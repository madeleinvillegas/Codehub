<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/reported_post"
    android:background="@drawable/bottom_line_border_posts"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reported_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="postTitle"
                    android:textColor="@color/black"
                    android:fontFamily="@font/abhaya_libre_bold"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reported_post_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/abhaya_libre_regular"
                    android:text="by Post Author | MM DD, YY | HH:mm"
                    android:textColor="#3a3b3c" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/report_options_btn"
                android:layout_width="22dp"
                android:layout_height="49dp"
                android:layout_gravity="right"
                android:background="#0000"
                android:scaleType="fitStart"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/dots" />

        </LinearLayout>

        <TextView
            android:id="@+id/reported_post_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:justificationMode="inter_word"
            android:textSize="18sp"
            android:fontFamily="@font/abhaya_libre_semi_bold"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/reporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:fontFamily="@font/abhaya_libre_regular"
            android:text="Reported By: Reporter Person"
            android:textColor="#3a3b3c" />


        <TextView
            android:id="@+id/reason_for_reporting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:justificationMode="inter_word"
            android:textSize="18sp"
            android:fontFamily="@font/abhaya_libre_semi_bold"
            android:text="I don't like the post"
            android:textColor="@color/black" />
    </LinearLayout>

</RelativeLayout>