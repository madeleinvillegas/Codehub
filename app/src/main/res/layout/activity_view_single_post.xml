<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_line_border_posts"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/singles_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="postTitle"
                    android:textColor="@color/black"
                    android:fontFamily="@font/abhaya_libre_bold"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/singles_post_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/abhaya_libre_regular"
                    android:text="by Post Author | MM DD, YY | HH:mm"
                    android:textColor="#3a3b3c" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <!--             TODO: Remove space sa end of triple dots -->

            <ImageButton
                android:id="@+id/optionss_btn"
                android:layout_width="22dp"
                android:layout_height="49dp"
                android:layout_gravity="right"
                android:background="#0000"
                android:scaleType="fitStart"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/dots" />

        </LinearLayout>

        <TextView
            android:id="@+id/singles_post_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:justificationMode="inter_word"
            android:textSize="18sp"
            android:fontFamily="@font/abhaya_libre_semi_bold"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/like_btns"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#0000"
                android:src="@drawable/unlike" />

            <TextView
                android:id="@+id/number_of_likess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"
                android:paddingLeft="10dp"
                android:text="100 likes"
                android:fontFamily="@font/abhaya_libre_bold"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/comment_btns"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#0000"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>