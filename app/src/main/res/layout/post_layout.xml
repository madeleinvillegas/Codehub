<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/single_post"
    android:background="@drawable/bottom_line_border_posts">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/single_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:text="postTitle"
                    android:textStyle="bold"
                    android:textSize="24sp" />
                <TextView
                    android:id="@+id/single_post_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:text="by Book Author | MM DD, YY | HH:mm" />

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <!--TODO: Replace button with triple dots, option for edit, delete, and report-->
            <Button
                android:id="@+id/triple_dots"
                android:layout_width="33dp"
                android:layout_height="50dp"
                android:layout_gravity="right" />
        </LinearLayout>

        <TextView
            android:id="@+id/single_post_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum"
            android:justificationMode="inter_word"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/like_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/unlike"
                android:background="#0000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_of_likes"
                android:textStyle="bold"
                android:text="100 likes"
                android:textSize="15sp"
                android:padding="15dp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
<!--            TODO: Felix, find a good png na lang to replace the button-->
<!--            Add the next line sa loob ng ImageButton para magtransparent-->
<!--            android:background="#0000"-->
            <ImageButton
                android:id="@+id/comment_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/unlike"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>