<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <TextView
        android:textSize="50sp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textColor="@color/black"
        android:fontFamily="@font/abhaya_libre_bold"
        android:text="Account\nRecovery">
    </TextView>

    <TextView
        android:textSize="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/abhaya_libre_regular"
        android:text="Please enter your registered email address.\nWe will be sending an email with the reset link">
    </TextView>

    <EditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/abhaya_libre_regular"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/login_register_edittext_border"
        android:hint="Email address">
    </EditText>

    <Button
        android:id="@+id/send_email_btn"
        android:layout_margin="10dp"
        android:textSize="50px"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abhaya_libre_semi_bold"
        android:background="@drawable/login_register_rounded_corner_button"
        android:text="Send Email">
    </Button>



</LinearLayout>